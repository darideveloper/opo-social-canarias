---
// Layout
import Layout from '../layouts/Layout.astro'

// Components
import Forms from '../components/molecules/forms/Login'

// Utils components
import PageSEO from '../components/utils/PageSEO.astro'
---

<Layout>
  <PageSEO
    slot="seo"
    currentPage='Iniciar Sesión'
    pageDescription='Accede a tu cuenta en Socialia y continúa preparando tus oposiciones de Trabajo Social en Canarias con acceso ilimitado a temario, casos prácticos y herramientas IA.'
    extraKeywords='iniciar sesión socialia, login, acceso cuenta, entrar plataforma estudio'
  />
  <div class='min-h-[calc(100vh-4rem)] grid place-items-center px-4'>
    <Forms client:load />
  </div>
</Layout>
