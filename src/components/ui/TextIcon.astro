---
import type { ComponentType } from "react";
import { FiCheckCircle, FiDownload, FiZap } from "react-icons/fi";

interface Props {
  iconName?: string;
  text: string;
  textVariant?: "muted" | "secondary";
}

const ICONS: Record<string, ComponentType<any>> = {
  check: FiCheckCircle,
  download: FiDownload,
  zap: FiZap,
};

const {
  iconName = "check",
  text,
  textVariant = "muted",
} = Astro.props as Props;
const Icon = ICONS[iconName] ?? FiCheckCircle;
---

<li
  class:list={[
    "flex",
    "items-center",
    "text-sm",
    textVariant === "muted"
      ? "text-neutral"
      : "text-[color-color-purple",
  ]}
>
  <span
    class:list={[
      "inline-flex",
      "items-center",
      "justify-center",
      "w-6",
      "h-6",
      "mr-3",
      "rounded-full",
      "bg-white",
    ]}
  >
    <Icon size={16} class:list={["text-color-purple"]} />
  </span>
  <span>{text}</span>
</li>
