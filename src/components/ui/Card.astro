---
import { FaBook } from "react-icons/fa";
import { FaShieldHalved } from "react-icons/fa6";
import { FaBolt } from "react-icons/fa6";
import { FaBullseye } from "react-icons/fa6";
import { FaStar } from "react-icons/fa6";

// Props
interface Props {
  title: string;
  text: string;
  iconName: "book" | "shield" | "bolt" | "bullseye" | "star";
  iconWhite?: boolean;
  className?: string;
}
const {
  title,
  text,
  iconName,
  iconWhite = false,
  className = "", // FIX THIS
} = Astro.props as Props;

const icons = {
  book: FaBook,
  shield: FaShieldHalved,
  bolt: FaBolt,
  bullseye: FaBullseye,
  star: FaStar,
};

const Icon = icons[iconName];
---

<article class:list={["card", "bg-base-100", "w-full", "shadow-sm", "p-4"]}>
  <div class:list={["card-body", className]}>
    <div class:list={["flex", "items-center"]}>
      <Icon size={36} className={iconWhite ? "text-white" : "text-secondary"} />
    </div>
    <h3 class:list={["card-title", "capitalize"]}>
      {title}
    </h3>
    <p class:list={["text-black"]}>{text}</p>
  </div>
</article>
