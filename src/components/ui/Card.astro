---
import type { ComponentType } from "react";
import { FaBook } from "react-icons/fa";

interface Props {
  title: string;
  text: string;
  iconName: "book";
  iconWhite?: boolean;
}
const {
  title,
  text,
  iconName,
  iconWhite = false,
} = Astro.props as Props;

const icons = {
  book: FaBook
};


const Icon = icons[iconName];
---

<div class:list={["card", "bg-base-100", "w-full", "shadow-sm", "p-4"]}>
  <div class:list={["card-body"]}>
      <div class:list={["flex", "items-center"]}>
        <Icon size={36} className={iconWhite ? "text-white":"text-secondary"}/>
    </div>
      <h3 class:list={["card-title"]}>
        {title}
      </h3>
      <p class:list={["text-gray-600"]}>{text}</p>
  </div>
</div>
