---
// Types
import type { CardProps } from '../../types/card'

// Props
const {
  title,
  iconName,
  iconWhite = false,
  textWhite = false,
  class: className = '',
} = Astro.props as CardProps

// components
import Card from './Card.astro'
---

<Card
  title={title}
  iconName={iconName}
  iconWhite={iconWhite}
  textWhite={textWhite}
  class:list={[
    'text-center',
    'items-center',
    'bg-base-100',
    'shadow-sm',
    className,
  ]}
>
  <p class:list={['text-center', '!m-0', '!p-0', 'text-center']}>
    <slot />
  </p>
</Card>
