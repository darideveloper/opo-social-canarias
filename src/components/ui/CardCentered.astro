---
// Types
import type { CardProps } from "../../types/card";

// Props
const {
  title,
  iconName,
  iconWhite = false,
  textWhite = false,
  class: className = "",
} = Astro.props as CardProps;

// components
import Card from "./Card.astro";
---

<Card
  title={title}
  iconName={iconName}
  iconWhite={iconWhite}
  textWhite={textWhite}
  class:list={["text-center", "items-center", className]}
>
  <slot />
</Card>
