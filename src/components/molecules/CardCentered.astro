---
// Libs
import clsx from "clsx";

// Types
import type { CardType } from "../../types/card";

// Props
const {
  title,
  iconName,
  iconWhite = false,
  textWhite = false,
  class: className = "",
} = Astro.props as CardType;

// components
import Card from "./Card.astro";


---

<Card
  title={title}
  iconName={iconName}
  iconWhite={iconWhite}
  textWhite={textWhite}
  class={clsx(
    "text-center",
    "items-center",
    "bg-base-100",
    "shadow-sm",
    className
  )}
>
  <p class={clsx("text-center", "!m-0", "!p-0")}>
    <slot />
  </p>
</Card>
