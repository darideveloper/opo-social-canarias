---
// Libs
import { clsx } from 'clsx'

// Props
interface Props {
  class?: string;
  [key: string]: any; // Allow any other props
}

const { class: className = "", ...rest } = Astro.props as Props;
---

<div
  {...rest}
  class={clsx(
    "badge",
    "badge-warning",
    "inline-block",
    "px-4",
    "py-1",
    "text-xs",
    className
  )}
>
  <p><slot /></p>
</div>
